  0% {
    transform: scale(1);
  }
  20% {
    transform: scale(1.05);
  }40% {
    transform: scale(1);
  }
  60% {
    transform: scale(1.05);
  }
  80% {
    transform: scale(1);
  }
  100% {
    transform: scale(1.07);
  }
}

