    <view class="userinfo">
      <button wx:if="{{!hasUserInfo && canIUse}}" class="splash-button" open-type="getUserInfo" bindgetuserinfo="getUserInfo">Sign In</button>
      <block wx:else>
        <button class="splash-button-browse" bindtap="goToBrowsePage">Enter</button>
        <view>
          <view class="splash-text-shop" bindtap="goToShowShopPage">I am an Artist</view>
        </view>
      </block>
    </view>
  </view>
