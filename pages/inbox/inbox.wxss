/* pages/inbox/inbox.wxss */

.wrapper {
  height: 100vh;
  background-color: black;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.title {
 color: white;
}

.inbox-container {
  height: calc(100vh - 22px);
  width: 100vw;
  display: flex;
  flex-direction: column;
}

.card {
  height: 5vh;
  width: 50vw;
  border: 3px solid white;
  border-radius: 10px;
  margin: 15px;
  color: white;
}

.name {
  font-weight: bold;
}