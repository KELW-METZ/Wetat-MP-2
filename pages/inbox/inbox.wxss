/* pages/inbox/inbox.wxss */

.wrapper {
  height: 100vh;
  background-color: black;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.title {
 color: white;
}

.inbox-container {
   height: 80vh; 
  width: 100vw;
  display: flex;
  flex-direction: column;
}

.card {
  position: relative;
  padding: 5px;
  width: 50vw;
  border: 3px solid white;
  border-radius: 10px;
  margin: 15px;
  color: white;
  display: flex;
  flex-direction: column;
 justify-content: center;
}

.name {
  font-weight: bold;
}

.message {
  word-wrap: break-word;
}

.other {
  float: left;
  margin-left: 3vw;
}

.user {
  float: right;
  margin-right: 3vw;
  padding: 0;
}


.avatar {
  position: absolute;
  height: 5vh;
  width: 5vh;
  border-radius: 50%;
  top: -2.5vh;
  opacity: .95;
}

.user.avatar{
  right: -5vh;
}

.other.avatar {
  left: -5vh;
}

 textarea {
   height: 10vh;
  width: 100vw;
  background-color: white;
} 

button {
  width: 100vw;
  background: transparent;
  border: dotted white 5rpx;
  color: white;
}

/* START TAB BAR  */

 .icon-back {
  width: 30px;
  height: 30px;
  opacity: 0.5;
}

.avatar-tab {
  width: 22px;
  height: 22px;
  margin-left: 5px;
  margin-top: 5px;
}

.nav {
  position: fixed;
  bottom: 0;
  width: 100%;
  background-color: #1C1919;
  overflow: hidden;
  height: 6.5vh;
  border-top: 0.5px solid #dddddd;
}

.markey-container {
  display: flex;
  justify-content: space-around;
}


