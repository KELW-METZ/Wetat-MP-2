<!--pages/info5/info5.wxml-->
<view style="position: relative;">
<view class="message-container" hidden='true'>
      <view style="background-color: black;">
      <form class="message-form" bindsubmit='bindSubmit'>
        <view  style="display: flex; justify-content: center; align-items: center; flex-direction: column;">
          <textarea name="content" placeholder='What do you want to ask {{item.name}}?' style="text-align: center;"></textarea>
          <button class="send-button" form-type='submit'>Send</button>
        </view>
      </form>
      </view>
      </view>
<swiper vertical="true" style="height: 100vh; width: 100vw;">
  <block wx:for="{{artists}}">
    <swiper-item>
     <view class="artist-container">
        <swiper style="width: 100vw; height: 50vh;" indicator-dots="true" circular="true">
          <block wx:for="{{item.art}}">
            <swiper-item>
              <view style="display: flex; justify-content: center;">
                 <view class="CTA-container">
                    <view bindtap="onShareAppMessage">
                      <button class="share-btn" open-type="share" size="mini">Share</button>
                    </view>
                <image bindtap="favoriteImage" data-id="{{item.id}}" class="heart-icon" src="{{heart}}" />
                <!-- <image bindtap="showInbox" data-id="item.id" class="icon" src="{{chat}}" />         -->
              </view>
              </view>
                <image bindtap='previewImages' data-url="{{item.url}}" src="{{item.url}}" class="slide-image art-image" />    
           </swiper-item>
          </block>
        </swiper>
        <image bindtap='previewImages' data-url="{{item.avatar_url}}" class="avatar artist-avatar" src="{{item.avatar_url}}" />
        <image class="avatar shop-logo" src="{{item.shop.logo_url}}" />
        <view class="artist-info">
          <view class="artist-name-container">
            <text class="artist-title">Artist:</text>
            <text class="artist-name">{{item.name}}</text>
          </view>
        </view>
        <view class="work-info">
          <text class="shop-name">Working at: {{item.shop.name}}</text>
          <text class="experience">Experience: {{item.years_of_experience}} years</text>
        </view>
      <button class="book-button" bindtap='showMessageForm' data-id="{{item.id}}">Book</button>
    </view>
    </swiper-item>
  </block>
</swiper>
</view>


