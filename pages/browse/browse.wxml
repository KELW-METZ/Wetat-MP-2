<view class='featured-container'>
 
    <view bindtap='showStyle' data-style="{{item.style}}" class="big-card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://wx1.sinaimg.cn/mw690/95af932egy1fp11zn5j9tj20hs0hsmzh.jpg');">   
    
    <view class="card-description">
      <text>{{item.shop}}</text>
    </view>
  </view>
</view>


