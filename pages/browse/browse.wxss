/* pages/info5/info5.wxss */
.artist-container {
  height: 100vh;
  background-color:black;
  display: flex;
  flex-direction: column;
  position: relative;
}

.CTA-container {
  background-color: transparent;
  display: flex;
  justify-content: space-between;
  height: 85rpx;
  width: 95%;
  position: absolute;
  top: 5rpx;
  z-index: 2;
}

.share-btn {
 margin-top: 1vh;
 margin-left: 0px;
 display: cover;
 height: 70rpx;
  width: 70rpx;
  padding: 2px;
  border: 1px solid rgba(0,0,0,.3);
  border-radius: 30%;
  opacity: 0.5;
}

.share-img {
  display: cover;
  width: 100%;
  height: 100%;
}

.share-img:hover {
  opacity: 1;
}

.search-btn {
 margin-top: 1rpx;
 margin-left: 0px;
 display: cover;
 height: 60rpx;
  width: 60rpx;
  padding: 1px;
  border: 1px solid rgba(0,0,0,.1);
  border-radius: 30%;
  opacity: 0.1;
}

.search-img {
display: cover;
  width: 5vw;
  height: 2.5vh;
}

.tag-picker {
   margin-top: 3px;
  color: white;
  background-color: rgba(0,0,0,.3);
  border: 1px solid rgba(255,255,255,.1);
  color: rgba(255,255,255,.8);
  font-size: 2vh;
  justify-content: center;
  padding: 2px !important;
  padding-top: 0px !important;
  padding-bottom: 0px !important;
  text-decoration: underline rgba(255,255,255,.2);
  height: 4vh;
}

/* .tag-picker:hover {
background-color: rgba(0,0,0,.6);
color: white;
} */

.tag-picker > text {
  margin: 0;
  padding: 0;
}

.heart-icon {
  margin-top: 1vh;
  height: 60rpx;
  width: 60rpx;
  padding: 2px;
  border: 1px solid rgba(255,255,255,.3);
  background-color: rgba(250,0,0,.2);
  border-radius: 30%;
}

.heart-icon:hover {
  background-color: white;
}

.info-flex {
  position: fixed;
  right: 15px;
}

  .info-icon {
    border: 1px solid white;
    padding: 1px;
    height: 15px;
    width: 15px;
    background-color: white;
  }

.slide-image {
  height: 100%;
  width: 100%;
  border: solid 1px rgba(255,255,255,.3);
}

 .slide-image.art-image {
  height: 100%;
  width: 100%;
   background-size: cover; 
}

.artist-info {
  margin-top: 20rpx;
  background-color: black;
}

.artist-and-work-info-flex {
display: flex;
flex-direction: column;
align-content: space-between;
height: 75%;
}

.avatar {
  height: 200rpx;
  width: 200rpx;
  border-radius: 50%;
  margin: 10rpx;
  border: solid 1px rgba(0,0,0,.4)
}

.artist-avatar {
  position: absolute;
  left: 1vw;
  bottom: 32vh;
}

.artist-name-container {
  font-size: 50rpx;
  color: white;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.artist-title {
  color: antiquewhite;
  font-size: 20px;
}

.artist-name {
  color: whitesmoke;
  font-size: 30px;
  text-decoration: underline double rgba(250,0,0,.3);
}

.work-info {
  color: white;
  background-color: black;
  height: 30vh;
  display: flex;
  flex-direction: column;
  align-items:center;
}

.shop-info {
  display: flex;
  justify-content: space-between;
}

.shop-name {
  color: white;
  font-weight: bold;
  font-size: 2.4vh;
  margin-bottom: 0px;
  padding-bottom: 0px;

}

.shop-logo {
  position: absolute;
  right: 1vw;
  bottom: 32vh;
}

.experience {
  margin-bottom: .7vh;
  font-size: 2.2vh;
}

.see-more {
  text-decoration: underline solid rgba(255,255,255,0.4);
  font-size: 2.2vh;
  position: relative;
  margin-bottom: 5vh;
}

.down-arrow-img {
  height: 2.5vh;
  width: 7vw;
  padding: 2px;
  border: 1px solid rgba(255,255,255,.1);
  border-radius: 30%;
}

.view-next-artist-text {
  color: rgba(255,255,255,0.7);
  font-size: 3.5vh;
  text-align: center;
  border-right: 1px solid white;
  border-left: 1px solid white;
  border-bottom: 1px solid white;
  border-top: 1px solid rgba(255,255,255,.1);
  margin-left: 3vw;
  margin-right: 3vw;
  margin-bottom: 1vh;
  box-shadow: 1px 1px 1px rgba(255,255,255,.9);
}

.book-button {
  border-radius: 5rpx;
  width: 95%;
  height: 6vh;
  font-size: 3vh;
  font-weight: bold;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: black;
  border: 1px solid rgba(255,255,255,.7);
  color: rgba(255,255,255,.9);
  margin-bottom: 1vh;
}

.message-container {
  position: absolute;
  z-index: 10;
  display: flex;
  justify-content: center;
  align-items: center;
  background: rgba(0,0,0,.6);
  height: 100vh;
  width: 100vw;
}

.textarea {
  background-color: white;
  margin-bottom: 15rpx;
}

.send-button {
  width: 100%;
  color: white;
  background: transparent;
  font-size: 48rpx;
  font-weight: bold;
  border: dotted white 5rpx;
}